@model ecommerce.Models.ProductVM ;
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class=" py-2">@(Model.Product.Id == 0 ? "Create Product" : "Edit Product")</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input hidden asp-for="Product.Id" />
            <input hidden asp-for="Product.ImageUrl" />
            <div class="border p-3">
               
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Name" class="form-control border-0 shadow" />
                    <label asp-for="Product.Name" class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Description" class="form-control border-0 shadow" />
                    <label asp-for="Product.Description" class="ms-2"></label>

                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="Product.CategoryId" asp-items="Model.Categories" class="form-select border-0 shadow">
                        <option disabled selected>--select category--</option>
                    </select>
                    <label asp-for="Product.CategoryId" class="ms-2"></label>

                </div>
                
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.status" class="form-control border-0 shadow" />
                    <label asp-for="Product.status" class="ms-2"></label>
                   
                </div>
                <div class="form-floating py-2 col-2">
                    <input type="file" name="file"  asp-for="Product.ImageUrl" class="form-control border-0 shadow" />
                    <label asp-for="Product.status" class="ms-2"></label>

                </div>
               @*  <div class="form-floating py-2 col-10">
                    <img src="@Model.Product.ImageUrl" style="width:100px; height:100px" />
                </div> *@
                 <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Qty" class="form-control border-0 shadow" />
                    <label asp-for="Product.Qty" class="ms-2"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Price" class="form-control border-0 shadow" />
                    <label asp-for="Product.Price" class="ms-2"></label>
                  
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.BulkPrice" class="form-control border-0 shadow" />
                    <label asp-for="Product.BulkPrice" class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.supplliername" class="form-control border-0 shadow" />
                    <label asp-for="Product.supplliername" class="ms-2"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.SerialNumber" class="form-control border-0 shadow" />
                    <label asp-for="Product.supplliername" class="ms-2"></label>

                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">@(Model.Product.Id == 0 ? "Create  " : "Save Changes ")</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>