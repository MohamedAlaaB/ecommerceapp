@model ecommerce.Models.Customer ;
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class=" py-2">Are you sure ?</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">

                <div class="form-floating py-2 col-12">
                    <input asp-for="Customer_Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Customer_Name" class="ms-2"></label>

                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Customer_Address" disabled class="form-control border-0 shadow" />
                    <label asp-for="Customer_Address" class="ms-2"></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Customer_PhoneNumber" disabled class="form-control border-0 shadow" />
                    <label asp-for="Customer_PhoneNumber" class="ms-2"></label>

                </div>
              

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

